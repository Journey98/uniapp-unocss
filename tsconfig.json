{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./packages/*"]
    },
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types"],
    "ignoreDeprecations": "5.0",
    "module": "ESNext"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "typing/**/*.d.ts"]
}
